{
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:react/recommended"
    ],
    "plugins": ["react", "import"],
    "rules": {
      "react/prop-types": 0,
      "indent": ["warn", 2],
      "react/react-in-jsx-scope": "off",
      "react/jsx-uses-react": "off",
      "no-unused-vars": "off",
      "react/no-unused-vars": "off",
      "eslint-disable-next-line jsx-a11y/click-events-have-key-events": "off",
      "react/no-unescaped-entities": "off"
      
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": false,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }